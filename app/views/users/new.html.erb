<h1>Sign up</h1>

<div class="card">
  <% if @user.errors.any? %>
    <div class="error-list">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this account from being created:</h2>
      <ul>
        <% @user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @user, url: signup_path do |form| %>
    <div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email, required: true, autofocus: true, placeholder: "you@company.com" %>
    </div>

    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password, required: true, placeholder: "Minimum 8 characters" %>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation, "Confirm password" %>
      <%= form.password_field :password_confirmation, required: true %>
    </div>

    <div>
      <%= form.submit "Create account", class: "btn btn-primary", style: "width:100%" %>
    </div>
  <% end %>

  <p class="text-center text-muted mt-1">
    Already have an account? <a href="<%= login_path %>">Log in</a>
  </p>
</div>
